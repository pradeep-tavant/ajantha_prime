<%= form_with(model: category, local: true, class: "form-horizontal") do |f
| %>
  <%= resource_error_messages!(category) %>

  <div class="form-group">
    <%= f.label :name, "Category Name *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-12  flex-buttons">
    <%= link_to 'Cancel', category, class: "btn btn-default" %>
    <%= f.submit "Submit", class: "mleft10 btn btn-primary" %>
  </div>
<% end %>
