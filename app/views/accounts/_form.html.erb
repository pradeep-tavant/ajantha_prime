<%= form_with(model: account, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(account) %>

  <div class="form-group">
    <%= f.label :account_type, "Account Type *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:account_type, Account.account_types.keys, {prompt: 'Select'}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :member_id, "Payment By *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:member_id, flats_list_with_id, {prompt: 'Select'}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :title, "Title *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :invoice_id, "Invoice/Bill #", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :invoice_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Amount (&#8377;) *".html_safe, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :amount, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :payment_mode, "Payment Mode *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:payment_mode, Account.payment_modes.keys, {prompt: 'Select'}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :on_date, "Payment Date *", class: "control-label col-sm-2" %>
    <div class="col-sm-10 input-group">
      <%= f.text_field :on_date, class: "form-control datepicker", value: (account.on_date || Date.today).strftime("%d/%b/%Y"), autocomplete: :off %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :for_month, "Month *", class: "control-label col-sm-2" %>
    <div class="col-sm-10 input-group">
      <%= f.text_field :for_month, class: "form-control monthpicker", value: (account.for_month || Date.today.strftime("%b-%Y")), autocomplete: :off %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-12 flex-buttons">
    <%= link_to 'Cancel', account, class: "btn btn-default" %>
    <%= f.submit "Submit", class: "mleft10 btn btn-primary" %>
  </div>
<% end %>
