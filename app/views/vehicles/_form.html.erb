<%= form_with(model: vehicle, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(vehicle) %>

  <%= f.hidden_field :member_id %>

  <div class="form-group">
    <%= f.label :name, "Vehicle Name", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "eg. Maruti Baleno (White)" %> <br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :number, "Reg Number", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :number, class: "form-control", placeholder: "eg. KA05 B 9999" %> <br />
    </div>
  </div>

  <div class="form-group">
    <%= f.label :Category, "Vehicle Type", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:category, ["Bike/Scooter","Car"], {prompt: 'Select'}, {class: "form-control"}) %> <br />
    </div>
  </div>

  <div>
    <div class="col-sm-12" style="text-align: center;">
      <%= link_to 'Cancel', :back, class: "btn btn-default" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
