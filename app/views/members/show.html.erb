<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= @member.name %>
          <% if current_member.admin? or current_member == @member %>
            <span class="pull-right">
              <%= link_to edit_member_path(@member) do %>
                <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>
              <% end %>
            </span>
          <% end %>
        </h3>
      </div>

      <dl class="dl-horizontal mtop20">
        <dt>Name:</dt>
        <dd><%= @member.name %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Block:</dt>
        <dd><%= @member.block %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Floor:</dt>
        <dd><%= @member.floor_name %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Flat:</dt>
        <dd><%= @member.flat_name %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Owner?:</dt>
        <dd><%= @member.owner ? 'Yes' : 'No' %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Resident?:</dt>
        <dd><%= @member.active ? 'Yes' : 'No' %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Email:</dt>
        <dd><%= @member.email %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Secondary Email:</dt>
        <dd><%= @member.sec_email %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Phone:</dt>
        <dd><%= @member.phone %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Secondary Phone:</dt>
        <dd><%= @member.sec_phone %></dd>
      </dl>
    </div>

    <%= link_to '<< Members', members_path, class: "btn btn-default" %>
  </div>
</div>