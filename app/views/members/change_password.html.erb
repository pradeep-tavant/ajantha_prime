<div class="col-lg-12">
  <h1 class="page-header">Change Password</h1>
  <%= form_for @member, as: :member, url: update_password_path(@member), method: :put, html: { class: "form-horizontal" } do |f| %>

    <%= resource_error_messages!(@member) %>

    <div>
      <%= f.label :current_password, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :current_password, class: "form-control" %> <br />
      </div>
    </div>

    <div>
      <%= f.label :password, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: "form-control" %> <br />
      </div>
    </div>

    <div>
      <%= f.label :password_confirmation, 'Confirm Password', class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: "form-control" %> <br />
      </div>
    </div>

    <div>
      <div class="col-sm-12" style="text-align: center;">
        <%= link_to "Cancel", member_path(@member), class: "btn btn-default" %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
