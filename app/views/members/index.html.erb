<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>List of Members
          <% if current_member.admin? %>
            <%= link_to 'Add Member', new_member_path, class: "btn btn-default pull-right" %>
          <% end %>
        </h3>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body panel30">
        <table class="dataTable table table-striped table-bordered" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Flat</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Rented?</th>
              <% if current_member.admin? %>
                <th>Actions</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @members && @members.each do |member| %>
              <tr>
                <td><%= link_to member.name, member_path(member) %></td>
                <td><%= member.floor_name %><%= member.flat_name %> - <%= member.block %></td>
                <td><%= member.phone %></td>
                <td><%= member.email %></td>
                <td><%= member.rented? ? 'Yes' : 'No' %></td>
                <% if current_member.admin? %>
                  <td>
                    <%= link_to edit_member_path(member) do %>
                      <i class="fa fa-pencil fa-fw" title="Edit"></i>
                    <% end %>
                    <%= link_to member_path(member), method: :delete, data: {confirm: "Are you sure want to remove this member?"} do %>
                      <i class="fa fa-trash-o fa-fw" title="Delete"></i>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
