<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= @post.title %>
          <span class="pull-right">
            <%= link_to edit_post_path(@post) do %>
              <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>
            <% end %>
          </span>
        </h3>
      </div>

      <dl class="dl-horizontal mtop20">
        <dt>Title:</dt>
        <dd><%= @post.title %></dd>
      </dl>

      <dl class="dl-horizontal mtop20">
        <dt>Description:</dt>
        <dd><%= @post.description %></dd>
      </dl>

      <dl class="dl-horizontal">
        <dt>Private?:</dt>
        <dd><%= @post.private? ? 'Yes' : 'No' %></dd>
      </dl>
    </div>

    <%= render partial: "comments/template", locals: {commentable: @post, new_comment: @new_comment} %>

    <%= link_to '<< Posts', posts_path, class: "btn btn-default" %>
  </div>
</div>
