<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @post.title %>
            <% if @post.member == current_member || current_member.admin? %>
              <span class="pull-right">
                <%= link_to edit_post_path(@post) do %>
                  <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>
                <% end %>
              </span>
            <% end %>
          </h3>
        </div>
        <div class="panel-body">
          <%= @post.description %>
        </div>
      </div>

      <%= render partial: "comments/template", locals: {commentable: @post, new_comment: @new_comment} %>

      <%= link_to '<< Posts', posts_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
