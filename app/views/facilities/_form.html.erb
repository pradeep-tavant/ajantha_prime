<%= form_with(model: facility, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(facility) %>

  <div class="form-group">
    <%= f.label :name, "Name *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:category_id, Category.all.map{|x| [x.name, x.id]}, {prompt: 'Select'}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :designation, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :designation, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Phone *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :address, class: "form-control" %>
    </div>
  </div>

  <!-- <div class="form-group">
    <%#= f.label :shift, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%#= f.select(:shift, [["Day",true],["Night",false]], {}, {class: "form-control"}) %>
    </div>
  </div> -->

  <div class="form-group">
    <%= f.label :active, "Public", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.check_box :active, class: "form-control", style: "width:34px" %>
    </div>
  </div>

  <div>
    <div class="col-sm-12" style="text-align: center;">
      <%= link_to 'Cancel', :back, class: "btn btn-default" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
