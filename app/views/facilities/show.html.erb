<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @facility.name %>
            <% if current_member.admin? %>
              <span class="pull-right">
                <%= link_to edit_facility_path(@facility) do %>
                  <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>
                <% end %>
              </span>
            <% end %>
          </h3>
        </div>
        <dl class="dl-horizontal mtop20">
          <dt>Name:</dt>
          <dd><%= @facility.name %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Category:</dt>
          <dd><%= @facility.category.try(:name).try(:titleize) %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Designation:</dt>
          <dd><%= @facility.designation %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Phone:</dt>
          <dd><%= @facility.phone %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Email:</dt>
          <dd><%= @facility.email %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Address:</dt>
          <dd><%= simple_format(@facility.address) %></dd>
        </dl>
        <!-- <dl class="dl-horizontal mtop20">
          <dt>Shift:</dt>
          <dd><%#= @facility.shift? ? 'Day' : 'Night' %></dd>
        </dl> -->
        <dl class="dl-horizontal mtop20">
          <dt>Public:</dt>
          <dd><%= @facility.active? ? 'Yes' : 'No' %></dd>
        </dl>
      </div>

      <%= link_to '<< Contacts', facilities_path, class: "btn btn-default" %>
    </div>
  </div>
</div>