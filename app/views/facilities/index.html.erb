<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Facilities
          <% if current_member.admin? %>
            <%= link_to 'Add New Facility', new_facility_path, class: "btn btn-default pull-right" %>
          <% end %>
        </h3>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body panel30 members-wrapper">
        <table class="dataTable table table-striped table-bordered facilities-wrapper" cellspacing="0" width="100%">
          <thead>
            <tr>
              <th>Name</th>
              <th>Category</th>
              <th>Designation</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Address</th>
              <th>Shift</th>
              <th>Active</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @facilities.each do |facility| %>
              <tr>
                <td><%= link_to facility.name, facility_path(facility) %></td>
                <td><%= facility.category %></td>
                <td><%= facility.designation %></td>
                <td><%= facility.phone %></td>
                <td><%= facility.email %></td>
                <td><%= facility.address %></td>
                <td><%= facility.shift %></td>
                <td><%= facility.active %></td>
                <% if current_member.admin? %>
                  <td>
                    <%= link_to edit_facility_path(facility) do %>
                      <i class="fa fa-pencil fa-fw" title="Edit"></i>
                    <% end %>
                    <%= link_to facility, method: :delete, data: { confirm: 'Are you sure want to remove this facility member?' } do %>
                      <i class="fa fa-trash-o fa-fw" title="Delete"></i>
                    <% end %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
