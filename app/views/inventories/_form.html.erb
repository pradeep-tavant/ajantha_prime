<%= form_with(model: inventory, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(inventory) %>

  <div class="form-group">
    <%= f.label :name, "Name *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Category *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:category_id, Category.all.map{|x| [x.name, x.id]}, {prompt: 'Select'}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :quantity, "Quantity *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.number_field :quantity, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Total Amount (&#8377;) *".html_safe, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :amount, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :purchase_date, "Purchase Date *", class: "control-label col-sm-2" %>
    <div class="col-sm-10 input-group">
      <%= f.text_field :purchase_date, class: "form-control datepicker", value: inventory.purchase_date.try(:strftime, "%d/%b/%Y").to_s, autocomplete: :off %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :warranty, "Warranty (in years)*", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :warranty, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :invoice, 'Invoice', class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :invoice, class: "form-control btn" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-12 flex-buttons">
    <%= link_to 'Cancel', inventory, class: "btn btn-default" %>
    <%= f.submit "Submit", class: "mleft10 btn btn-primary" %>
  </div>
<% end %>
