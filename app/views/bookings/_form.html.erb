<%= form_with(model: booking, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(booking) %>

  <% disabled = (!booking.new_record? && current_member != booking.member) %>

  <%= f.hidden_field :member_id %>

  <div class="form-group">
    <%= f.label :reason, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :reason, class: "form-control", disabled: disabled %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :on_date, class: "control-label col-sm-2" %>
    <div class="col-sm-10 input-group">
      <%= f.text_field :on_date, class: "form-control datepicker", disabled: disabled, autocomplete: :off %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start_time, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.time_select :start_time, {ampm: true, prompt: true, minute_step: 15}, {class: "form-control", disabled: disabled, style: "width:100px; display: inline"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :end_time, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.time_select :end_time, {ampm: true, prompt: true, minute_step: 15}, {class: "form-control", disabled: disabled, style: "width:100px; display: inline"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :notes, class: "form-control", disabled: disabled %>
    </div>
  </div>

  <% if current_member.admin? %>
    <div class="form-group">
      <%= f.label :approved, "Approve?", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.check_box :approved, class: "form-control", style: "width:34px" %>
      </div>
    </div>
  <% end %>

  <div>
    <div class="col-sm-12" style="text-align: center;">
      <%= link_to 'Cancel', :back, class: "btn btn-default" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
