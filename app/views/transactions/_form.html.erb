<%= form_with(model: transaction, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(transaction) %>

  <%= f.hidden_field :member_id %>

  <div class="form-group">
    <%= f.label :transaction_id, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :transaction_id, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :amount_paid, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.number_field :amount_paid, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :on_date, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :on_date, class: "form-control datepicker" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:category, Transaction.categories.map {|k, v| [k.titleize, k]}, {prompt: 'Select'}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div>
    <div class="col-sm-12" style="text-align: center;">
      <%= link_to 'Cancel', :back, class: "btn btn-default" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
