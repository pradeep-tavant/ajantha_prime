<%= form_with(model: transaction, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(transaction) %>

  <% disabled = (!transaction.new_record? && current_member != transaction.member) %>

  <%= f.hidden_field :member_id %>

  <div class="form-group">
    <%= f.label :transaction_id, "Transaction ID *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :transaction_id, class: "form-control", disabled: disabled %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :amount_paid, "Amount Paid *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.number_field :amount_paid, class: "form-control", disabled: disabled %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :on_date, "Paid Date *", class: "control-label col-sm-2" %>
    <div class="col-sm-10 input-group">
      <%= f.text_field :on_date, class: "form-control datepicker", disabled: disabled %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :category, "Category *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.select(:category, Transaction.categories.keys, {prompt: 'Select'}, {class: "form-control", disabled: disabled}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <% if current_member.admin? %>
    <div class="form-group">
      <%= f.label :status, "Payment Status", class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.select(:status, Transaction.statuses.keys, {prompt: 'Select'}, {class: "form-control"}) %>
      </div>
    </div>
  <% end %>

  <div>
    <div class="col-sm-12" style="text-align: center;">
      <%= link_to 'Cancel', :back, class: "btn btn-default" %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
