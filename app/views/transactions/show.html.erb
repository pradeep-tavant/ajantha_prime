<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @transaction.transaction_id %> - <%= @transaction.status %>
            <% if !@transaction.verified? && (current_member.admin? || current_member == @transaction.member) %>
              <span class="pull-right">
                <%= link_to edit_transaction_path(@transaction) do %>
                  <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>
                <% end %>
              </span>
            <% end %>
            <% if current_member.admin? && @transaction.verified? %>
              <span class="pull-right">
                <%= link_to download_receipt_transaction_path(@transaction, format: :pdf), target: "_blank" do %>
                  <i class="fa fa-download fa-fw" title="Download Receipt"></i>
                <% end %>
              </span>
            <% end %>
          </h3>
        </div>
        <dl class="dl-horizontal mtop20">
          <dt>Transaction ID:</dt>
          <dd><%= @transaction.transaction_id %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Amount Paid:</dt>
          <dd>Rs.<%= @transaction.amount_paid %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Date Paid:</dt>
          <dd><%= @transaction.on_date.strftime("%d/%b/%Y") %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Category:</dt>
          <dd><%= @transaction.category %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Description:</dt>
          <dd><%= simple_format(@transaction.description) %></dd>
        </dl>
      </div>

      <%= link_to '<< Transactions', transactions_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
