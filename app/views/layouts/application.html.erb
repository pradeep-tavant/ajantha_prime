<!DOCTYPE html>
<html lang="en">
  <head>
    <title>AjanthaPrime</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= favicon_link_tag asset_path('favicon.ico'), :rel => 'icon', :type => "image/x-icon" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <div id="header_section">
        <%= render 'layouts/header' %>
      </div>
      <div class="container-fluid">
        <div class="flash-container">
          <%= render 'layouts/flash_message' %>
        </div>
        <%= yield %>
      </div>
    </div>


    <% if current_member.present? %>
      <!-- Feedback Modal Start -->
      <div class="modal fade" id="feedbackForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <%= render "home/feedback" %>
          </div>
        </div>
      </div>

      <a href="javascript:void(0);" class="feedback-button btn btn-primary" data-toggle="modal" data-target="#feedbackForm">
        <i class="fa fa-commenting fa-fw" title="Write to Us"></i>
        Feedback
      </a>
      <!-- Feedback Modal End -->
    <% end %>

    <!-- Footer -->
    <footer class="footer">
      <div class="container text-center">
        <%= image_tag(asset_path("Ajantha-logo-small.png")) %>
      </div>
      <div class="container text-center">
        <span class="text-muted">Â© <%= Date.today.year %> Copyright:
          <a href="https://ajanthaprime.herokuapp.com"> ajanthaprime.herokuapp.com</a>
        </span>
      </div>
    </footer>
    <!-- Footer -->
  </body>
  <div class="loader" id="loader"></div>
</html>
