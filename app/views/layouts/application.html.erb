<!DOCTYPE html>
<html lang="en">
  <head>
    <%= display_meta_tags(default_meta_tags) %>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="container">
      <div id="header_section">
        <%= render 'layouts/header' %>
      </div>
      <div class="container-fluid">
        <div class="flash-container">
          <%= render 'layouts/flash_message' %>
        </div>
        <%= yield %>
      </div>
    </div>


    <% if current_member.present? %>
      <!-- Feedback Modal Start -->
      <div class="modal fade" id="feedbackForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <%= render "home/feedback" %>
          </div>
        </div>
      </div>

      <a href="javascript:void(0);" class="feedback-button btn btn-primary" data-toggle="modal" data-target="#feedbackForm">
        <i class="fa fa-commenting fa-fw" title="Write to Us"></i>
        Feedback
      </a>
      <!-- Feedback Modal End -->
    <% end %>

    <!-- Footer -->
    <footer class="footer text-center">
      <div class="container">
        <%= image_tag(asset_path("Ajantha-logo-small.png")) %>
        <p class="text-muted mbottom0">Â© <%= Date.today.year %> Copyright:
          <%= link_to root_url, root_url %>
        </p>
        <ul class="list-inline">
          <li class="list-inline-item">
            <%= link_to location_path, target: '_blank' do %>
              <i class="fa fa-map-marker fa-fw fa-2" title="Location Map"></i>
            <% end %>
          </li>
          <li class="list-inline-item">
            <%= link_to "https://www.facebook.com/ajanthaprime/", target: '_blank' do %>
              <i class="fa fa-facebook-official fa-fw fa-2" title="Facebook"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </footer>
    <!-- Footer -->
  </body>
  <div class="loader" id="loader"></div>
</html>
