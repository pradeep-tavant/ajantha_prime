<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @poll.topic %>
            <% if current_member.admin? %>
              <span class="pull-right">
                <%= link_to edit_poll_path(@poll) do %>
                  <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>
                <% end %>
              </span>
            <% end %>
          </h3>
        </div>
        <div class="panel-body panel30">
          <%= render 'voting_form' %>
        </div>
      </div>
      <%= link_to '<< Opinon Polls', polls_path, class: "btn btn-default" %>
    </div>
  </div>
</div>

