<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @setting.name %>
            <% if current_member.admin? %>
              <span class="pull-right">
                <%= link_to edit_setting_path(@setting), class: "btn btn-default" do %>
                  <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>Edit
                <% end %>
              </span>
            <% end %>
          </h3>
        </div>
        <dl class="dl-horizontal mtop20">
          <dt>Name:</dt>
          <dd><%= @setting.name %></dd>
        </dl>
        <dl class="dl-horizontal mtop20">
          <dt>Value:</dt>
          <dd><%= @setting.value %></dd>
        </dl>
      </div>
      <%= link_to '<< Settings', settings_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
