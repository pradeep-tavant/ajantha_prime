<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>
            <div class="flex-box">
              <%= @setting.name %>
              <% if current_member.admin? %>
                <div class="col-lg-2">
                  <%= link_to edit_setting_path(@setting), class: "btn btn-default" do %>
                    <i class="fa fa-pencil-square-o fa-fw" title="Edit"></i>Edit
                  <% end %>
                </div>
              <% end %>
            </div>
          </h3>
        </div>
        <div class="panel-body panel30">
          <dl class="dl-horizontal mtop20">
            <dt>Name:</dt>
            <dd><%= @setting.name %></dd>
          </dl>
          <dl class="dl-horizontal mtop20">
            <dt>Value:</dt>
            <dd><%= @setting.value %></dd>
          </dl>
        </div>
      </div>
      <%= link_to '<< Settings', settings_path, class: "btn btn-default" %>
    </div>
  </div>
</div>
