<%= form_with(model: setting, local: true, class: "form-horizontal") do |f| %>
  <%= resource_error_messages!(setting) %>

  <div class="form-group">
    <%= f.label :name, "Name *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :value, "Value *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :value, class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-12 flex-buttons">
    <%= link_to 'Cancel', :back, class: "btn btn-default" %>
    <%= f.submit "Submit", class: "mleft10 btn btn-primary" %>
  </div>
<% end %>
