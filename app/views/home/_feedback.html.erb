<%= form_with(model: @new_feedback, local: true, class: "form-horizontal") do |f| %>
  <div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h3 class="modal-title w-100 font-weight-bold">
      Write to us
    </h3>
  </div>
  <div class="modal-body mx-3">

  <%= f.hidden_field :member_id, value: current_member.id %>

  <div class="form-group">
    <%= f.label :subject, "Subject *", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :subject, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control", rows: 10 %>
    </div>
  </div>

  </div>
  <div class="modal-footer d-flex justify-content-center">
    <div class="col-sm-12" style="text-align: center;">
      <%= button_tag type: 'submit', class: "btn btn-primary", disabled: true do %>
        Send<i class="fa fa-paper-plane-o fa-fw"></i>
      <% end %>
    </div>
  </div>
<% end %>