<div class="row">
  <div class="col-lg-12">
    <h3 class="lpad20">Welcome <%= current_member.name %> <span class="label label-default">(<%= current_member.login %>)</span></h3>
    <div class="col-lg-2 mtop10">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Quick Links</h3>
        </div>
        <div class="panel-body">
          <ul class="nav nav-pills nav-stacked">
            <li>
              <%= link_to member_path(current_member) do %>
                <i class="fa fa-user fa-fw"></i>
                My Profile
              <% end %>
            </li>
            <li>
              <%= link_to vehicles_path do %>
                <i class="fa fa-car fa-fw"></i>
                My Vehicle(s)
              <% end %>
            </li>
            <li>
              <%= link_to transactions_path do %>
                <i class="fa fa-money fa-fw"></i>
                My Transaction(s)
              <% end %>
            </li>
            <li>
              <%= link_to bookings_path do %>
                <i class="fa fa-birthday-cake fa-fw"></i>
                My Party Hall Booking(s)
              <% end %>
            </li>
            <li>
              <%= link_to change_password_path(current_member) do %>
                <i class="fa fa-key fa-fw"></i>
                Change Password
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-10 mtop10">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">News Feed</h3>
        </div>
        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item">
              <% if current_member.transactions.length > 0 %>
                Thanks for your maintenance payment for <b>Jan-Mar'2019 (Quarter 1)</b>. You can check the Payment Status <%= link_to 'here', transactions_path %>.
              <% else %>
                <span class="badge">Pending</span>
                Kindly pay your maintenance charges for <b>Jan-Mar'2019 (Quarter 1)</b>. If already paid, update the transaction details <%= link_to 'here', new_transaction_path %>.
              <% end %>
            </li>
            <li class="list-group-item">
              <% if current_member.vehicles.length > 0 %>
                Thanks for updating your Vehicle(s) information.
              <% else %>
                <span class="badge">Pending</span>
                Kindly add your Vehicle(s) details <%= link_to 'here', new_vehicle_path %>.
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-10 mtop10">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body">
          <% if current_member.admin? && current_member.admin_toggle? %>
            <div style="text-align: right;" class="mbottom10">
              <%= form_tag :file_upload, multipart: true, class: "form-horizontal" do |f| %>
                <%= file_field_tag :my_file %>
                <%= submit_tag "Upload", class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
          <ul class="list-group">
            <% @documents.each do |file_name| %>
              <% next if [".",".."].include?(file_name) %>
              <li class="list-group-item">
                <%= file_name %>
                <%= link_to (root_url + "documents/#{URI.escape(file_name)}"), target: '_blank' do %>
                  <i class="fa fa-download fa-fw" title="Download"></i>
                <% end %>
                <% if current_member.admin? %>
                  <%= link_to file_remove_path(my_file: file_name), method: :delete, data: {confirm: "Are you sure?"} do %>
                    <i class="fa fa-trash-o fa-fw" title="Delete"></i>
                  <% end %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>