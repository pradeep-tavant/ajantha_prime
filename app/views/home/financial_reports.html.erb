<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>
          <div class="flex-box">
            Financial Reports
          </div>
        </h3>
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body panel30 financial-reports-wrapper">
        <ul class="list-group">
          <% @documents.each do |file_name, file_path| %>
            <li class="list-group-item">
              <%= file_name %>
              <%= link_to (file_path + file_name), target: '_blank' do %>
                <i class="fa fa-download fa-fw" title="Download"></i>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
